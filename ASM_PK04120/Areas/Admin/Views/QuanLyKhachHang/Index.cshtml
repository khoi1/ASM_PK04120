@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ASM_PK04120.Areas.Admin.Models.KhachHangViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý khách hàng";
}
@{
    // Tạo một đối tượng NguoiDungModel rỗng chỉ để cho form "Thêm mới" sử dụng
    var khachHangMoi = new ASM_PK04120.Models.NguoiDungModel();
}

<div id="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Quản lý khách hàng</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <i class="fa fa-users"></i>
                Quản lý khách hàng
                <a href="#" class="text-white" data-toggle="modal" data-target="#addCustomerModal">
                    <span class="float-right">
                        <i class="fa fa-plus"></i>
                        Thêm khách hàng mới
                    </span>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="customerTable" width="100%" cellspacing="0">
                        <thead class="text-center">
                            <tr>
                                <th>Họ tên</th>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @* --- VÒNG LẶP HIỂN THỊ DỮ LIỆU THẬT TỪ VIEWMODEL --- *@
                            @if (Model.DanhSachKhachHang.Any())
                            {
                                @foreach (var item in Model.DanhSachKhachHang)
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.TaiKhoan</td>
                                        <td>@item.Email</td>
                                        <td>@item.SoDienThoai</td>
                                        <td>@item.DiaChi</td>
                                        <td>
                                            @if (item.TrangThai == 1)
                                            {
                                                <span class="badge badge-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Bị khóa</span>
                                            }
                                        </td>
                                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm"
                                                    data-toggle="modal"
                                                    data-target="#editModal"
                                                    data-id="@item.MaNguoiDung"
													data-taikhoan="@item.TaiKhoan"
                                                    data-matkhau="@item.MatKhau"
                                                    data-hoten="@item.HoTen"
                                                    data-email="@item.Email"
                                                    data-sdt="@item.SoDienThoai"
                                                    data-diachi="@item.DiaChi"
                                                    data-trangthai="@item.TrangThai">
                                                Sửa
                                            </button>

                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">Không có dữ liệu khách hàng.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* --- PHẦN HIỂN THỊ CÁC NÚT PHÂN TRANG --- *@
                @if (Model.TongSoTrang > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @* Nút Trang Trước *@
                            <li class="page-item @(Model.TrangHienTai == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.TrangHienTai - 1)">Trước</a>
                            </li>

                            @* Các Nút Số Trang *@
                            @for (int i = 1; i <= Model.TongSoTrang; i++)
                            {
                                <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @* Nút Trang Sau *@
                            <li class="page-item @(Model.TrangHienTai == Model.TongSoTrang ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.TrangHienTai + 1)">Sau</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
            <div class="card-footer small text-muted">Cập nhật lúc @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        <!-- Modal Thêm khách hàng -->
        <div class="modal fade" id="addCustomerModal" tabindex="-1" role="dialog" aria-labelledby="addCustomerLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                @* --- BẮT ĐẦU NÂNG CẤP --- *@
                <form asp-action="Create" asp-controller="QuanLyKhachHang" method="post" class="modal-content">
                    @Html.AntiForgeryToken()
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="addCustomerLabel">Thêm khách hàng mới</h5>
                        <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @* Không cần asp-validation-summary vì trang sẽ tải lại *@

                        <div class="form-group">
                            <label>Tài khoản</label>
                            <input name="TaiKhoan" class="form-control" required minlength="4" maxlength="100" placeholder="Nhập tên tài khoản" />
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input name="MatKhau" type="password" class="form-control" required minlength="6" maxlength="255" placeholder="Nhập mật khẩu" />
                        </div>
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input name="HoTen" class="form-control" required minlength="2" maxlength="255" placeholder="Nhập họ tên đầy đủ" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input name="Email" type="email" class="form-control" required maxlength="255" placeholder="Nhập địa chỉ email" />
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input name="SoDienThoai" class="form-control" pattern="^0[0-9]{9}$" placeholder="VD: 0912345678" title="Số điện thoại phải bắt đầu bằng 0 và có 10 chữ số" />
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input name="DiaChi" class="form-control" maxlength="500" placeholder="Nhập địa chỉ khách hàng" />
                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select name="TrangThai" class="form-control">
                                <option value="1">Hoạt động</option>
                                <option value="0">Khóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                        <button class="btn btn-primary" type="submit">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Modal Sửa khách hàng -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form asp-action="Edit" method="post">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title" id="editCustomerLabel">Sửa thông tin khách hàng</h5>
                            <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" id="editMaNguoiDung" name="MaNguoiDung" />
                            <div class="form-group">
                                <label for="editTaiKhoan">Tài khoản</label>
                                <input type="text" class="form-control" id="editTaiKhoan" name="TaiKhoan" readonly/>
                            </div>
                            <div class="form-group">
                                <label for="editMatKhau">Mật khẩu</label>
                                <input type="password" class="form-control" id="editMatKhau" name="MatKhau" required minlength="6" maxlength="255" placeholder="Nhập mật khẩu" />
                            </div>
                            <div class="form-group">
                                <label for="editHoTen">Họ tên</label>
                                <input type="text" class="form-control" id="editHoTen" name="HoTen" required minlength="2" maxlength="255" placeholder="Nhập họ tên đầy đủ" />
                            </div>
                            <div class="form-group">
                                <label for="editEmail">Email</label>
                                <input type="email" class="form-control" id="editEmail" name="Email" required maxlength="255" placeholder="Nhập địa chỉ email" />
                            </div>
                            <div class="form-group">
                                <label for="editSDT">Số điện thoại</label>
                                <input type="text" class="form-control" id="editSDT" name="SoDienThoai" pattern="^0[0-9]{9}$" placeholder="VD: 0912345678" title="Số điện thoại phải bắt đầu bằng 0 và có 10 chữ số" />
                            </div>
                            <div class="form-group">
                                <label for="editDiaChi">Địa chỉ</label>
                                <input type="text" class="form-control" id="editDiaChi" name="DiaChi" maxlength="500" placeholder="Nhập địa chỉ khách hàng" />
                            </div>
                            <div class="form-group">
                                <label for="editTrangThai">Trạng thái</label>
                                <select class="form-control" id="editTrangThai" name="TrangThai">
                                    <option value="1">Hoạt động</option>
                                    <option value="0">Khóa</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                            <button class="btn btn-info" type="submit">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Nút bấm mở modal
            var modal = $(this); // Chính là modal đang mở

            // Truyền dữ liệu từ data-* vào các input trong modal
            modal.find('#editMaNguoiDung').val(button.data('id'));
            modal.find('#editTaiKhoan').val(button.data('taikhoan'));
            modal.find('#editMatKhau').val(button.data('matkhau'));
            modal.find('#editHoTen').val(button.data('hoten'));
            modal.find('#editEmail').val(button.data('email'));
            modal.find('#editSDT').val(button.data('sdt'));
            modal.find('#editDiaChi').val(button.data('diachi'));
            modal.find('#editTrangThai').val(button.data('trangthai'));
        });
    </script>
}


