@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ASM_PK04120.Areas.Admin.Models.KhachHangViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý khách hàng";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active">Quản lý khách hàng</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <i class="fa fa-users"></i>
                Quản lý khách hàng
                <a href="#" class="text-white" data-toggle="modal" data-target="#addCustomerModal">
                    <span class="float-right">
                        <i class="fa fa-plus"></i>
                        Thêm khách hàng mới
                    </span>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="customerTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* --- Vòng lặp để hiển thị dữ liệu thật từ ViewModel --- *@
                            @if (Model.DanhSachKhachHang.Any())
                            {
                                @foreach (var item in Model.DanhSachKhachHang)
                                {
                                    <tr>
                                        <td>@item.HoTen</td>
                                        <td>@item.TaiKhoan</td>
                                        <td>@item.Email</td>
                                        <td>@item.SoDienThoai</td>
                                        <td>
                                            @if (item.TrangThai == 1)
                                            {
                                                <span class="badge badge-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Bị khóa</span>
                                            }
                                        </td>
                                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#editCustomerModal" data-id="@item.MaNguoiDung">
                                                <i class="fa fa-pencil"></i> Sửa
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">Không có dữ liệu khách hàng.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* --- PHẦN HIỂN THỊ CÁC NÚT PHÂN TRANG --- *@
                @if (Model.TongSoTrang > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @* Nút Trang Trước *@
                            <li class="page-item @(Model.TrangHienTai == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.TrangHienTai - 1)">Trước</a>
                            </li>

                            @* Các Nút Số Trang *@
                            @for (int i = 1; i <= Model.TongSoTrang; i++)
                            {
                                <li class="page-item @(i == Model.TrangHienTai ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @* Nút Trang Sau *@
                            <li class="page-item @(Model.TrangHienTai == Model.TongSoTrang ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.TrangHienTai + 1)">Sau</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
            <div class="card-footer small text-muted">Cập nhật lúc @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
        <!-- Modal Thêm khách hàng -->
        <div class="modal fade" id="addCustomerModal" tabindex="-1" role="dialog" aria-labelledby="addCustomerLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="addCustomerLabel">Thêm khách hàng mới</h5>
                        <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="account">Tài khoản</label>
                            <input type="text" class="form-control" id="account" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu</label>
                            <input type="password" class="form-control" id="password">
                        </div>
                        <div class="form-group">
                            <label for="customer_name">Họ tên</label>
                            <input type="text" class="form-control" id="customer_name" required>
                        </div>
                        <div class="form-group">
                            <label for="customer_email">Email</label>
                            <input type="email" class="form-control" id="customer_email" required>
                        </div>
                        <div class="form-group">
                            <label for="customer_phone">Số điện thoại</label>
                            <input type="text" class="form-control" id="customer_phone" required>
                        </div>
                        <div class="form-group">
                            <label for="customer_address">Địa chỉ</label>
                            <input type="text" class="form-control" id="customer_address">
                        </div>

                        <div class="form-group">
                            <label for="customer_status">Trạng thái</label>
                            <select class="form-control" id="customer_status">
                                <option value="active">Hoạt động</option>
                                <option value="locked">Khóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                        <button class="btn btn-primary" type="submit">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Modal Sửa khách hàng -->
        <div class="modal fade" id="editCustomerModal" tabindex="-1" role="dialog" aria-labelledby="editCustomerLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title" id="editCustomerLabel">Sửa thông tin khách hàng</h5>
                        <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="edit_account">Tài khoản</label>
                            <input type="text" class="form-control" id="edit_account" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_password">Mật khẩu</label>
                            <input type="password" class="form-control" id="edit_password">
                        </div>
                        <div class="form-group">
                            <label for="edit_customer_name">Họ tên</label>
                            <input type="text" class="form-control" id="edit_customer_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_customer_email">Email</label>
                            <input type="email" class="form-control" id="edit_customer_email" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_customer_phone">Số điện thoại</label>
                            <input type="text" class="form-control" id="edit_customer_phone" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_customer_address">Địa chỉ</label>
                            <input type="text" class="form-control" id="edit_customer_address">
                        </div>
                        <div class="form-group">
                            <label for="edit_customer_status">Trạng thái</label>
                            <select class="form-control" id="edit_customer_status">
                                <option value="active">Hoạt động</option>
                                <option value="locked">Khóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                        <button class="btn btn-info" type="submit">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Modal Xóa khách hàng -->
        <div class="modal fade" id="deleteCustomerModal" tabindex="-1" role="dialog"
             aria-labelledby="deleteCustomerLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteCustomerLabel">Xóa khách hàng</h5>
                        <button class="close text-white" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Bạn có chắc chắn muốn xóa khách hàng này không?
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                        <button class="btn btn-danger" type="submit">Xóa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Sticky Footer -->

</div>