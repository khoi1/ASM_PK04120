@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Http
@{
    var ControllerHienTai = ViewContext.RouteData.Values["controller"]?.ToString();
}

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" asp-area="KhachHang" asp-controller="TrangChu" asp-action="Index">BaKa<small>Coffee</small></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav"
                aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>
        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto align-items-center">
                <li class="nav-item @(ControllerHienTai == "TrangChu" ? "active" : "")"><a asp-area="KhachHang" asp-controller="TrangChu" asp-action="Index" class="nav-link">Trang chủ</a></li>
                <li class="nav-item @(ControllerHienTai == "SanPham" ? "active" : "")"><a asp-area="KhachHang" asp-controller="SanPham" asp-action="SanPham" class="nav-link">Sản phẩm</a></li>

                <li class="nav-item">
                    <div class="search-container">
                        <form asp-area="KhachHang" asp-controller="SanPham" asp-action="TimKiemSanPham" method="get" class="search-form ml-lg-3" autocomplete="off">
                            <div class="input-group">
                                <input type="text" name="query" class="form-control" id="searchInput" placeholder="Tìm kiếm sản phẩm...">

                                <div class="input-group-append">
                                    <span class="icon-search"></span>
                                </div>
                            </div>
                        </form>

                        <div id="searchResults" class="search-results-dropdown"></div>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link position-relative" asp-area="KhachHang" asp-controller="GioHang" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i> 
                        @* @if (ViewBag.CartItemCount != null && ViewBag.CartItemCount > 0) *@
                        @* { *@
                        @*     <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> *@
                        @*         @ViewBag.CartItemCount *@
                        @*         <span class="visually-hidden">sản phẩm trong giỏ</span> *@
                        @*     </span> *@
                        @* } *@
                    </a>
                </li>
                <li class="nav-item dropdown">
                    @if (Context.Session.GetString("TaiKhoan") != null)
                    {
                        // --- GIAO DIỆN KHI ĐÃ ĐĂNG NHẬP ---
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="icon-user"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <h6 class="dropdown-header">Chào, @Context.Session.GetString("HoTen")</h6>
                            <a class="dropdown-item" asp-area="KhachHang" asp-controller="TaiKhoan" asp-action="DangXuat">Đăng Xuất</a>
                        </div>
                    }
                    else
                    {
                        // --- GIAO DIỆN KHI CHƯA ĐĂNG NHẬP ---
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="icon-user"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                            <a class="dropdown-item" asp-area="KhachHang" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng Nhập</a>
                            <a class="dropdown-item" asp-area="KhachHang" asp-controller="TaiKhoan" asp-action="DangKy">Đăng Ký</a>
                        </div>
                    }
                </li>

            </ul>

            
        </div>
    </div>
</nav>

<script>
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');

    // Định dạng số thành tiền tệ Việt Nam
    const currencyFormatter = new Intl.NumberFormat('vi-VN', {
        style: 'currency',
        currency: 'VND'
    });

    searchInput.addEventListener('keyup', function() {
        const tuKhoa = this.value;

        if (tuKhoa.length < 2) { // Chỉ tìm kiếm khi có ít nhất 2 ký tự
            searchResults.innerHTML = '';
            searchResults.style.display = 'none';
            return;
        }

        fetch(`/KhachHang/SanPham/TimKiemSanPham?tuKhoa=${tuKhoa}`)
            .then(response => response.json())
            .then(data => {
                searchResults.innerHTML = ''; // Xóa kết quả cũ

                if (data.length > 0) {
                    data.forEach(product => {
                        // Tạo một thẻ 'a' bao bọc toàn bộ item
                        const link = document.createElement('a');
                        link.href = `/KhachHang/SanPham/ChiTietSanPham/${product.maSanPham}`;
                        link.classList.add('dropdown-item');

                        // Tạo HTML cho nội dung bên trong, bao gồm hình ảnh, tên và giá
                        link.innerHTML = `
                            <img src="/KhachHang/images/AnhSP/${product.hinhAnh}" alt="${product.tenSanPham}" class="search-item-img">
                            <div class="search-item-info">
                                <span class="search-item-name">${product.tenSanPham}</span>
                                <span class="search-item-price">${currencyFormatter.format(product.giaBan)}</span>
                            </div>
                        `;

                        searchResults.appendChild(link);
                    });
                    searchResults.style.display = 'block';
                } else {
                    searchResults.style.display = 'none';
                }
            })
            .catch(error => console.error('Lỗi khi tìm kiếm:', error));
    });

    document.addEventListener('click', function(event) {
        if (!searchInput.contains(event.target)) {
            searchResults.style.display = 'none';
        }
    });
</script>