@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ASM_PK04120.Areas.KhachHang.Models.DangKyViewModel
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký - Coffee Shop</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/KhachHang/css/ionicons.min.css">
    <link rel="stylesheet" href="~/KhachHang/css/Login.css">
</head>

<body>
    <section class="auth-section">
        <a asp-area="KhachHang" asp-controller="TrangChu" asp-action="Index" class="back-to-home-btn">
            <span>&larr;</span> Quay lại trang chủ
        </a>

        <div class="auth-container register-container">
            <div class="auth-header">
                <p class="subheading">Tạo tài khoản mới</p>
                <h2>Đăng Ký</h2>
            </div>

            <form asp-action="DangKy" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label asp-for="TaiKhoan">Tài khoản</label>
                    <input asp-for="TaiKhoan" type="text" placeholder="nhatkhoi123" required>
                    <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoTen">Họ tên</label>
                    <input asp-for="HoTen" type="text" placeholder="Nguyễn Văn A" required>
					<span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" id="email" placeholder="your@email.com" required>
					<span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group password-wrapper">
                    <label asp-for="MatKhau">Mật khẩu</label>
                    <input asp-for="MatKhau" type="password" class="password-input" id="password" placeholder="••••••••" required>
                    <span class="toggle-password"><i class="ion-ios-eye-off"></i></span>
					<span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-group password-wrapper">
                    <label asp-for="XacNhanMatKhau">Xác nhận mật khẩu</label>
                    <input asp-for="XacNhanMatKhau" type="password" class="password-input" id="confirm-password" placeholder="••••••••" required>
                    <span class="toggle-password"><i class="ion-ios-eye-off"></i></span>
					<span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-auth">Đăng Ký</button>
            </form>

            <div class="divider">
                <span>Hoặc</span>
            </div>

            <div class="auth-link">
                Đã có tài khoản? <a asp-area="KhachHang" asp-action="DangNhap">Đăng nhập ngay</a>
            </div>
        </div>
    </section>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePasswordIcons = document.querySelectorAll('.toggle-password');

            togglePasswordIcons.forEach(icon => {
                icon.addEventListener('click', function () {
                    // Lấy thẻ input ngay trước icon
                    const passwordInput = this.previousElementSibling;
                    const iconElement = this.querySelector('i');

                    // Lấy kiểu của input (password hoặc text)
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    // Đổi icon con mắt
                    if (type === 'text') {
                        iconElement.classList.remove('ion-ios-eye-off');
                        iconElement.classList.add('ion-ios-eye');
                    } else {
                        iconElement.classList.remove('ion-ios-eye');
                        iconElement.classList.add('ion-ios-eye-off');
                    }
                });
            });
        });
    </script>
</body>
</html>